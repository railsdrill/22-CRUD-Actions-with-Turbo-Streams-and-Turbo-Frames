<%= turbo_frame_tag article do %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= article.content %>
  </p>

  <% if action_name != "show" %>
    <%= button_to "Destroy this article",article_path(article), method: :delete,  class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"  %>
    <%= link_to "Show this article", article, data: {turbo_frame: "_top"}, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this article', edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
<% end %>
